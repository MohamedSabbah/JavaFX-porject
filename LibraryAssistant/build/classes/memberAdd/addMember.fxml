<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../resources/common.css" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="memberAdd.AddMemberController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXTextField fx:id="memberName" labelFloat="true" promptText="Name">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
               </VBox.margin>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </JFXTextField>
            <JFXTextField fx:id="memberId" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Memeber ID">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
               </VBox.margin>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </JFXTextField>
            <JFXTextField fx:id="memberMobile" labelFloat="true" layoutX="10.0" layoutY="71.0" promptText="Mobile">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
               </VBox.margin>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </JFXTextField>
            <JFXTextField fx:id="memberEmail" labelFloat="true" layoutX="10.0" layoutY="102.0" promptText="Email">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
               </VBox.margin>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </JFXTextField>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
               <children>
                  <JFXButton fx:id="saveButton" onAction="#addMember" prefHeight="80.0" prefWidth="200.0" text="Save" />
                  <JFXButton layoutX="10.0" layoutY="10.0" onAction="#cancelMember" prefHeight="80.0" prefWidth="200.0" text="Cancel" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
